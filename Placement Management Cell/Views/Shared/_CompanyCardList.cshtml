@using PlacementManagementCell.Models.ViewModels
@model List<CompanyCard>

<div class="container mt-4 mb-5">
    <div class="row px-0 view-group">

        @foreach (var item in Model)
        {
            <div class="item col-md-6 col-sm-12 col-lg-4 my-4">
                <div class="card thumbnail shadow card-to-scale">
                    <div class="card">
                        <img src="@item.CompanyLogo" class="card-img-top" alt="..." style="height:250px;">
                        <div class="card-img-overlay">
                            <div class="d-flex features-like-location flex-column align-items-end h-100 justify-content-between">
                                <div class="location-field text-light fw-lighter bg-dark px-2 py-1 rounded-pill text-center">
                                    <a href="" class="text-decoration-none text-light">
                                        <span>
                                            <i class="bi bi-geo-alt text-decoration-none fst-normal">@item.City</i>
                                        </span>
                                    </a>
                                </div>
                                <div class="like-group d-flex flex-column justify-content-between">
                                    <div class="bg-dark p-1 my-1 rounded-circle d-flex justify-content-center align-items-center">
                                        <i class="bi bi-mortarboard text-decoration-none fst-normal text-light"> @item.Technology</i>
                                    </div>

                                    <button class="bg-dark bg-dark p-1 my-1  rounded-pill border-0 recommendation-grid-list" id="tempToCoworker" data-bs-toggle="modal" data-bs-target="#staticBackdrop1" onclick="gridListRecommend()">
                                        <i class="bi bi-currency-rupee text-decoration-none fst-normal text-light">
                                            @{
                                                if (item.Package >= 100000)
                                                {
                                                    @($"{item.Package / 100000} L")
                                                }
                                                else
                                                {
                                                    @item.Package
                                                }
                                            }
                                        </i>
                                    </button>


                                </div>

                            </div>
                        </div>
                    </div>
                    <span class="fw-lighter bg-dark rounded-pill text-center text-light w-50 align-self-center"
                          style="margin-top: -10px; z-index: 5;">@item.Name</span>
                    <div class="card-body card-body-h-450px d-flex flex-column justify-content-between">
                        <h5 class="card-title">
                            @item.Title
                        </h5>

                        <p class="card-text card-text-h-150px">
                            @item.BriefDesc
                        </p>

                        <div class="d-flex justify-content-center">
                            <span class="rounded-pill bg-white fw-light border px-2 mt-4" style="z-index: 1;">
                                From @item.FromDate.ToString().Substring(0, 11) until @item.ToDate.ToString().Substring(0, 11)
                            </span>
                        </div>
                        <hr class="" style="margin-top: -10px;">

                        <div class="time-seats">
                            <div class="d-flex time-seats-wrapper align-items-center justify-content-between">
                                <div class="d-flex align-items-center justify-content-between w-100">

                                    <div class="d-flex align-items-center">

                                        <div class="seats mx-2">
                                            <i class="bi bi-shop"></i>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <span>
                                                @item.NoOfVacancy
                                            </span>
                                            <span class="fw-lighter">Vacancy Open</span>
                                        </div>
                                    </div>

                                    <div class="deadlines d-flex align-items-center justify-content-between">
                                        <div class="deadline mx-2">
                                            <i class="bi bi-clock"></i>
                                        </div>
                                        <div class="d-flex flex-column ">
                                            <span>@item.Deadline.ToString().Substring(0, 11)</span>
                                            <span class="fw-lighter">Deadline</span>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="mission-submit-btn text-center">
                            <a onclick="volunteeringMissionDetails(item.mission.MissionId)">
                                <button type="submit" class="btn bg-white  rounded-pill px-4">
                                    View Details
                                    &nbsp; &nbsp;<i class="bi bi-arrow-right"></i>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>

            </div>

        }

    </div>
</div>


@{
    //double d = Model.Count() / 3.0;
    double d = 3;
    double pages = Math.Ceiling(d);
}


<div class="mt-4 text-center m-auto">
    <nav aria-label="Page navigation example" class="company-listing-pagination-nav">
        <ul class="pagination">
            <li class="page-item mx-2">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true"><i class="bi bi-chevron-double-left"></i></span>
                </a>
            </li>
            <li class="page-item mx-2">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true"><i class="bi bi-chevron-left"></i></span>
                </a>
            </li>
            @for (int i = 1; i <= @pages; i++)
            {
                <li class="page-item" id="@i"><a class="page-link">@i</a></li>
            }


            <li class="page-item mx-2">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true"><i class="bi bi-chevron-right"></i></span>
                </a>
            </li>
            <li class="page-item mx-2">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true"><i class="bi bi-chevron-double-right"></i></span>
                </a>
            </li>
        </ul>
    </nav>
</div>














