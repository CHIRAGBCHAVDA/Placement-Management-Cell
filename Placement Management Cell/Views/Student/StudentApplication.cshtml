@using PlacementManagementCell.Models.ViewModels
@model StudentCompanyViewModel



@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<script src="~/js/StudentLanding.js"></script>

<partial name="_StudentHeader" model="Model.StudentHeader" />

 <div class="container mt-2">
        <div class="row justify-content-between" style="min-height:50px">
            <div class="ps-0 col-12  col-sm-12 col-md-6">
                <input class="form-control me-2 border h-100"
                       type="search"
                       placeholder="Search Companies..."
                       aria-label="Search" id="search-query" />
            </div>
            @*<div class="col-6 bg-warning col-sm-6 col-md-3">
                    <button class="btn bg-warning h-100">Recent</button>
                </div>*@
            <div class="mt-3 ps-0 col-6 col-sm-6 col-md-3 text-md-end mt-md-0">

            <select class="form-select mx-2 h-100" aria-label="Default select example" id="sortingCompany">
                <option selected>Sort By</option>
                <option value="1"> Name [A-Z]</option>
                <option value="2"> Package  &nbsp; &#8595;</option>
                <option value="3"> Package &nbsp;  &#8593;</option>
                <option value="4"> Deadline &nbsp; &#x23F3;</option>
            </select>
            </div>
        </div>
    </div>

<div class="company-cards-wrapper-div">
    <partial name="_CompanyCardList" model="Model.CompanyCardsTotal" />
</div>


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Recent Notifications</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Mark As Read</button>
            </div>
        </div>
    </div>
</div>

